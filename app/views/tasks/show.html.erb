<h1><%= @task.title %></h1>
<div class="content">
  <%= @task.details %>
</div>

<input type="checkbox" <%="checked" if @task.completed%>> This task is <%= @task.completed ? "completed" : "not completed yet" %>

<%= link_to 'Edit this task', edit_task_path(@task) %>

<%= link_to 'Delete this task', task_path(@task), method: 'delete' %>

<%= link_to 'Back to list', tasks_path %>
